              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"{{criterioNomeRand}}\",\n  \"definicaoOperacional\": \"Definição automática\",\n  \"descricao\": \"Descrição de teste\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "",
                  "pm.test(\"201 Created\", function(){ pm.response.to.have.status(201); });",
                  "pm.test(\"Location presente\", function(){ pm.expect(pm.response.headers.has('Location')).to.be.true; });",
                  "const loc = pm.response.headers.get('Location');",
                  "pm.environment.set(\"criterioLocation\", loc);",
                  "const m = /\\/api\\/v1\\/criterios\\/(\\d+)$/.exec(loc || \"\");",
                  "pm.test(\"ID extraído\", function(){ pm.expect(m && m[1]).to.be.ok; });",
                  "if (m && m[1]) pm.environment.set(\"criterioId\", m[1]);"
                ]
              }
            }
          ]
        },
        {
          "name": "Obter por ID (200)",
