    {
      "name": "01 • Create & Read",
      "item": [
        {
          "name": "Criar Questao (201 + Location)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/questoes",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "questoes"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"idCriterio\": {{idCriterioDefault}},\n  \"enunciado\": \"{{enunciadoRand}}\",\n  \"tipo\": \"{{tipoDefault}}\",\n  \"obrigatoriedade\": \"{{obrigDefault}}\",\n  \"validacaoNumMin\": 1,\n  \"validacaoNumMax\": 5,\n  \"tamanhoTextoMax\": null,\n  \"sensivel\": false,\n  \"visivelParaGestor\": true,\n  \"ordemSugerida\": 999\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "",
                  "pm.test(\"201 Created\", function(){ pm.response.to.have.status(201); });",
                  "pm.test(\"Location presente\", function(){ pm.expect(pm.response.headers.has('Location')).to.be.true; });",
                  "const loc = pm.response.headers.get('Location');",
                  "pm.environment.set(\"questaoLocation\", loc);",
                  "const m = /\\/api\\/v1\\/questoes\\/(\\d+)$/.exec(loc || \"\");",
                  "pm.test(\"ID extraído\", function(){ pm.expect(m && m[1]).to.be.ok; });",
                  "if (m && m[1]) pm.environment.set(\"questaoId\", m[1]);"
                ]
              }
            }
          ]
        },
        {
          "name": "Obter por ID (200)",
